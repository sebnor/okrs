@model OKRs.Models.ObjectiveViewModels.KeyResultDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Objective" asp-action="Index">Objectives</a></li> @*TODO: Set back link to objectives list for objective.userId*@
    <li><a asp-controller="Objective" asp-action="Details" asp-route-id="@Model.ObjectiveId">@Model.ObjectiveTitle</a></li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h3 class="panel-title">
            <span class="pull-left">Key Result Description</span>
            <a class="btn btn-xs btn-default pull-right" asp-controller="KeyResult" asp-action="Edit" asp-route-objectiveId="@Model.ObjectiveId" asp-route-keyResultId="@Model.Id">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Edit
            </a>
        </h3>
    </div>
    <div class="panel-body">
        @Html.DisplayFor(model => model.Description)
        <hr />
        <div class="row">
            <div class="col-md-6">
                <strong>Completion Rate:</strong>
            </div>
            <div class="col-md-6">
                <div class="progress">
                    <div class="progress-bar @(Model.CompletionRate >= 0.7m ? "progress-bar-success" : Model.CompletionRate >= 0.3m ? "progress-bar-warning" : "progress-bar-danger")" 
                         role="progressbar" 
                         style="width: @((Model.CompletionRate * 100).ToString("F0"))%"
                         aria-valuenow="@((Model.CompletionRate * 100).ToString("F0"))" 
                         aria-valuemin="0" 
                         aria-valuemax="100">
                        @((Model.CompletionRate * 100).ToString("F0"))%
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>