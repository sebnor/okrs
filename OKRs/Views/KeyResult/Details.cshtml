@model             KeyResultDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Objective" asp-action="Index">Objectives</a></li> @*TODO: Set back link to objectives list for objective.userId*@
    <li><a asp-controller="Objective" asp-action="Details" asp-route-id="@Model.ObjectiveId">@Model.ObjectiveTitle</a></li>
</ol>

<div class="panel panel-default">
    <div class="panel-heading clearfix">
        <h3 class="panel-title">
            <span class="pull-left">Key Result Description</span>
            <a class="btn btn-xs btn-default pull-right" asp-controller="KeyResult" asp-action="Edit" asp-route-objectiveId="@Model.ObjectiveId" asp-route-keyResultId="@Model.Id">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Edit
            </a>
        </h3>
    </div>
    <div class="panel-body">
        @Html.DisplayFor(model => model.Description)
    </div>
</div>