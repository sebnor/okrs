@model OKRs.Models.ObjectiveViewModels.AddKeyResultViewModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb">
    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li><a asp-controller="Objective" asp-action="Index">Objectives</a></li> @*TODO: Set back link to objectives list for objective.userId*@
    <li><a asp-controller="Objective" asp-action="Details" asp-route-id="@Model.ObjectiveId">@Model.ObjectiveTitle</a></li>
</ol>

<h3>Add Key Result</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompletionRate" class="control-label">Completion Rate (%)</label>
                <div class="input-group">
                    <input id="completion-percentage" type="number" class="form-control" min="0" max="100" step="1" placeholder="0" />
                    <div class="input-group-addon">%</div>
                </div>
                <input asp-for="CompletionRate" type="hidden" id="completion-rate-decimal" />
                <span asp-validation-for="CompletionRate" class="text-danger"></span>
                <small class="form-text text-muted">Enter a percentage value from 0% to 100%</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="application/javascript">
        $(document).ready(function() {
            // Convert decimal to percentage for display
            var decimalValue = parseFloat($('#completion-rate-decimal').val()) || 0;
            $('#completion-percentage').val(Math.round(decimalValue * 100));
            
            // Update hidden field when percentage changes
            $('#completion-percentage').on('input', function() {
                var percentage = parseFloat($(this).val()) || 0;
                var decimal = percentage / 100;
                $('#completion-rate-decimal').val(decimal);
            });
        });
    </script>
}
